@model QuanLyThueXe.product

@{
    ViewBag.Title = "Delete";
}

<style>
    /* Custom CSS styles */
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    h2 {
        text-align: center;
    }

    h3 {
        text-align: center;
    }

    .product-details {
        margin: 20px 0;
    }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        margin-right: 10px;
    }
</style>

<div class="delete-container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>

    <div class="product-details">
       
       
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "ListProduct", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
