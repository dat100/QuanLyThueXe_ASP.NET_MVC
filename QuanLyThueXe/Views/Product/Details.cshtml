@model QuanLyThueXe.product

@{
    ViewBag.Title = "Details";
}

<style>
    /* Add the same styles as in the first file */
    h2 {
        font: bold 24px/1.5 sans-serif;
        color: #333;
        text-align: left;
        padding: 10px 20px;
        text-decoration: none;
        margin: 0 0 20px;
    }

    h4 {
        text-align: center;
        padding: 10px 20px;
        background-color: #CCFF99;
        color: #FF0000;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        font-size: 20px;
    }

    dl {
        text-align: center;
        padding: 10px 20px;
        background-color: #888888;
        color: #111111;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        font-size: 20px;
    }
    /* Add the same styles as in the first file */
    .form-horizontal {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    /* Add the same styles as in the first file */
    .control-label {
        font-weight: bold;
        text-align: right;
    }

    /* Add the same styles as in the first file */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .col-md-10 input {
        margin: 0 auto;
        display: inline-block;
    }

    .col-md-10 {
        margin: 0 auto;
        display: inline-block;
    }

    /* Add the same styles as in the first file */
    .btn-default {
        padding: 10px 20px;
        background-color: #00FF00;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
    }

    .btn-btl {
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        text-align: center;
        font-size: 20px;
    }

    /* Add the same styles as in the first file */
    .text-danger {
        color: red;
    }
    /* CSS cho các nút */
    .btn {
        display: inline-block;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
    }

    /* CSS cho nút chính (primary) */
    .btn-primary {
        background-color: #007bff; /* Màu nền nút chính */
        color: #fff; /* Màu chữ nút chính */
    }

    /* CSS cho nút mặc định (default) */
    .btn-default {
        background-color: #ccc; /* Màu nền nút mặc định */
        color: #fff; /* Màu chữ nút mặc định */
    }

    /* CSS cho nút thành công (success) */
    .btn-success {
        background-color: #28a745; /* Màu nền nút thành công */
        color: #fff; /* Màu chữ nút thành công */
    }

</style>

<h2>
    <span style="background: #99FFFF; padding: 10px; border-radius: 5px ">Details</span>
</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit", new { id = Model.ProductID })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("ListProduct")" class="btn btn-default">Back to List</a>
    <a href="@Url.Action("AddCart", "Cart", new { id = Model.ProductID })" class="btn btn-success">Add to Cart</a>
</p>

